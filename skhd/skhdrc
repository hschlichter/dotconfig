# Focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
alt - 0x2B : yabai -m display --focus west # ,
alt - 0x2F : yabai -m display --focus east # .

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3

# Move
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east
ctrl + alt - 0x2B : yabai -m window --display west; yabai -m display --focus west
ctrl + alt - 0x2F : yabai -m window --display east; yabai -m display --focus east

# Fullscreen
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# Increase/decrease window size
shift + alt - h : yabai -m window --resize left:-50:0
shift + alt - j : yabai -m window --resize bottom:0:50
shift + alt - k : yabai -m window --resize top:0:-50
shift + alt - l : yabai -m window --resize right:50:0

# Reset windows
shift + alt - 0 : yabai -m space --balance

# Toggle float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Apps
alt - f : open -a 'Finder'
alt - t : open -a 'Alacritty'
alt - s : open -a 'Safari'
alt - x : open -a 'Xcode'

# Remember these key combos are not free
# alt - o  for ø
# alt - '  for æ
# alt - a  for å
